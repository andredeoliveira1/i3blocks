# Guess the weather hourly
[WEATHER]
command=curl -Ss 'https://wttr.in?0&T&Q' | cut -c 16- | head -2 | xargs echo
interval=3600
color=#A4C2F4

[DISK]
command=df -h / | awk '/\//{ printf(" I/O %4s/%s \n", $4, $2) }'
interval=2
color=#C9E3DB
